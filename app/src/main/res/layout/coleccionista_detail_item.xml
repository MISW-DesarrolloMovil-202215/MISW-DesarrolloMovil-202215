<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="coleccionista" type="com.example.vinilosapp_g18.models.Coleccionista"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#eeeeee"
            app:strokeWidth="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">
                

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="@{coleccionista.name}" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:layout_marginStart="25dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="Telefono:" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="150dp"
                        android:layout_marginEnd="25dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:text="@{coleccionista.telephone}" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:layout_marginStart="25dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="Email:" />
                    <TextView
                        android:id="@+id/text_releaseDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginStart="150dp"
                        android:layout_marginEnd="25dp"
                        android:text="@{coleccionista.email}" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:layout_marginStart="25dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="Artista Favorito:" />
                    <TextView
                        android:id="@+id/text_favorite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginEnd="70dp"
                        android:layout_marginStart="150dp"
                        android:text="@{coleccionista.favoritePerformers}"
                        />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_alignEnd="@+id/text_favorite"
                        android:id="@+id/imageDetail"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        app:imageDetail="@{coleccionista.imagefavoritePerformers}"
                        android:layout_marginBottom="10dp"></de.hdodenhof.circleimageview.CircleImageView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:layout_marginStart="25dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="Album:" />
                    <TextView
                        android:id="@+id/text_album"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginEnd="70dp"
                        android:layout_marginStart="150dp"
                        android:text="@{coleccionista.collectorAlbums}"
                        />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_alignEnd="@+id/text_album"
                        android:id="@+id/imageDetail2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        app:imageDetail="@{coleccionista.imagecollectorAlbums}"
                        android:layout_marginBottom="10dp"></de.hdodenhof.circleimageview.CircleImageView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:layout_marginStart="25dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="Comentarios Realizados:" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/text_comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginEnd="25dp"
                        android:layout_marginStart="150dp"
                        android:text="@{coleccionista.comments}"
                        />
                </RelativeLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>