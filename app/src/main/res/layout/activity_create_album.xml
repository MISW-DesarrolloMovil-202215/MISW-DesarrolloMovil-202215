<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textAlbumName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del albúm:" />

    <EditText
        android:id="@+id/albumName_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <TextView
        android:id="@+id/textAlbumCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="URL de la portada del albúm" />

    <EditText
        android:id="@+id/albumCover_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <TextView
        android:id="@+id/textAlbumReleaseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de lanzamiento:" />

    <EditText
        android:id="@+id/idEdtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Ingrese la fecha" />

    <TextView
        android:id="@+id/textAlbumDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción:" />

    <EditText
        android:id="@+id/albumDescripcion_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <TextView
        android:id="@+id/textAlbumGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Género:" />

    <Spinner
        android:id="@+id/albumGenre_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textAlbumRecordLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compañía discográfica:" />

    <Spinner
        android:id="@+id/albumRecordLabel_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_newAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_crear_album" />
</LinearLayout>
